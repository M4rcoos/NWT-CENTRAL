@model List<NwtCentral.Models.GeolocationModel>;
@using System.Diagnostics

@{
    ViewData["Title"] = "Index";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mapa com Marcadores</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400&display=swap" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/geolocation.css" />

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC16QyJ9EXlqrwMa1mVdXODQBOXzzIP8X0&callback=initMap">
 
    </script>
    <script>
        var jsonData = @Html.Raw(ViewBag.JsonData);
    </script>
    <script src="~/js/site.js"></script>


</head>
<body>



    <main class="content">
        <div class="title">

            <h1 style="text-align:center; font-family: 'Roboto', sans-serif;"
                data-aos="zoom-in"
                data-aos-easing="linear"
                data-aos-duration="1500">
                Pontos de Localização
            </h1>

        </div>

        <article >

            <div id="map" data-aos="fade-right"
                 data-aos-easing="linear"
                 data-aos-duration="1500"></div>
            <div class="table-container" data-aos="fade-down"
                 data-aos-easing="linear"
                 data-aos-duration="1500">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th scope="col">
                                C.C
                            </th>
                            <th scope="col">
                                Equipamento
                            </th>
                            <th scope="col">
                                Localização
                            </th>
                            <th scope="col">
                                Data
                            </th>
                            <th scope="col">
                                Hora
                            </th>
                            <th scope="col">
                                Tempo
                            </th>

                            <th scope="col">
                                Status
                            </th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)


                        {

                            <tr data-latitude="@item.NumLatitude" data-longitude="@item.NumLongitude">
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodControlador)
                                </td>
                                <td >
                                    @Html.DisplayFor(modelItem => item.TxtEquipamento)
                                </td>
                                <td class="location-cell">
                                    @Html.DisplayFor(modelItem => item.Localizacao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Data)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hora)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tempo)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.DomStatus)
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </article>
    </main>



</body>
</html>


